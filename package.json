{
  "name": "emems",
  "author": "Ryan Dawes",
  "private": true,
  "dependencies": {
    "sass": "latest"
  },
  "devDependencies": {
    "@parcel/transformer-sass": "^2.6.2",
    "express": "^4.17.1",
    "npm": "^8.13.2",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.6.2",
    "sqlite3": "^5.0.2",
    "tailwindcss": "^3.3.1",
    "cors": "latest"
  },
  "scripts": {
    "dev": "parcel src/*.html",
    "clean": "rm -rf dist/ .parcel-cache/",
    "build": "parcel build src/*.html",
    "permissions": "chmod +x scripts/*.sh && chmod +x scripts/tests/*.sh",
    "make": "npm-run-all --sequential clean build permissions",
    "deploy": "npm run make && scripts/docker_build.sh && scripts/docker_deploy.sh",
    "test": "scripts/test.sh",
    "pub_ag": "scripts/taggit.sh"
  }
}
